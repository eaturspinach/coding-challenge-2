!!!
%html
  %head
    %title Monkey Inferno Challenge #2
    %link{ :href => "stylesheets/reset-min.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{ :href => "stylesheets/application.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
  %body
    #header
      %h1
        Monkey Inferno Challenge #2 
    #main
      #left_rail
        .module.two
          %h2
            Restaurant Categories
          %ul.list
            - @categories.each_pair do |cuisine,value|
              %li.item
                .name
                  = cuisine
                %ul
                  - value.each do |restaurant|
                    %li
                      = restaurant["name"]
        .module.three  
          %h2      
            Recent Restaurant Reviews
          %ul
            - @recent_business_reviews.each do |business|
              - business["reviews"].each do |review|
                %li
                  = review["rating"]
      #right_rail
        .module.one
          %h2
            Top Restaurants
          %ul.list
            - @restaurants.each do |restaurant|
              %li.item
                %img{:class=> "snapshot", :src => restaurant["image_url"], :alt => "#{restaurant["name"]} snapshot"}
                %ul.info
                  %li.name
                    = restaurant["name"]
                  %li
                    %a{:href => "tel:#{restaurant["phone"]}"}
                      = restaurant["display_phone"]
                  %li
                    %img{:src => restaurant["rating_img_url_small"], :alt => "#{restaurant["name"]} rating"}
                  %li
                    %ul
                      - restaurant["categories"].each do |category|
                        %li
                          = category[0]

    %script{:src => "javascripts/jquery-1.6.1.min.js", :type => "text/javascript"}
    %script{:src => "javascripts/application.js", :type => "text/javascript"}

